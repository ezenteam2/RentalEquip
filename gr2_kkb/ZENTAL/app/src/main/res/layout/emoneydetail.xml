<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="E머니 충전"
                android:id="@+id/moveCharge2"
                />
            <Button
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="E머니 출금"
                android:id="@+id/moveEmoneyWithraw2"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="E머니 내역"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="E머니 내역"
            android:textSize="11pt"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:text="총 충전금액"
                android:textSize="10pt"
                android:background="#BDBDBD"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:text="총 출금금액"
                android:textSize="10pt"
                android:background="#BDBDBD"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:text="현재 잔액"
                android:textSize="10pt"
                android:background="#BDBDBD"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textAlignment="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:text="100,000원"
            android:textSize="10pt"
            android:padding="5dp"
            android:textAlignment="gravity"
            android:gravity="right"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:text="50,000원"
                android:textSize="10pt"
                android:padding="5dp"
                android:textAlignment="gravity"
                android:gravity="right"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:text="50,000원"
                android:textSize="10pt"
                android:padding="5dp"
                android:textAlignment="gravity"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="전체내역조회"
                />
            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="충전내역조회"
                /><Button
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="출금내역조회"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="당일조회"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:hint="시작날짜"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="~"
                android:textSize="10pt"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:hint="종료날짜"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="조회하기"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:text="날짜"
                android:textSize="10pt"
                android:background="#BDBDBD"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:text="구분"
                android:textSize="10pt"
                android:background="#BDBDBD"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:text="금액"
                android:textSize="10pt"
                android:background="#BDBDBD"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textAlignment="center"
                />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/EmoneyListView"/>
    </LinearLayout>



</LinearLayout>