<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="E머니 충전"
            android:id="@+id/moveCharge"
            />
        <Button
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="E머니 출금"/>
        <Button
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="E머니 내역"
            android:id="@+id/moveEmoneyDetail2"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="E머니 출금"
        android:textSize="11pt"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="현재잔액"
            android:textSize="10pt"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="100,000"
            android:textSize="10pt"
            android:textColor="#ff0000"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="원"
            android:textSize="10pt"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="출금 금액"
        android:textSize="10pt"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="10,000원"
            android:id="@+id/Withraw10000"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="30,000원"
            android:id="@+id/Withraw30000"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="50,000원"
            android:id="@+id/Withraw50000"/>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="직접입력"
                android:id="@+id/RadioInputWithraw"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="출금금액"
                android:id="@+id/EditWithrawPrice"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="right"
        >
        <TextView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="출금 금액 : "
            android:textSize="10pt"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="10pt"
            android:textAlignment="center"
            android:id="@+id/PriceTextView2"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="원"
            android:textSize="10pt"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="계좌번호"
        android:textSize="10pt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/Bank_Spinner2"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="계좌번호"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="충전하기"/>
    </LinearLayout>
</LinearLayout>